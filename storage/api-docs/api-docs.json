{
    "openapi": "3.0.0",
    "info": {
        "title": "Gerobaks REST API",
        "description": "Official REST API specification for the Gerobaks waste management platform.",
        "contact": {
            "name": "Gerobaks Engineering",
            "email": "dev@gerobaks.com"
        },
        "version": "1.0.0"
    },
    "servers": [
        {
            "url": "http://127.0.0.1:8000",
            "description": "Local development (php artisan serve)"
        },
        {
            "url": "https://api.gerobaks.com",
            "description": "Production (placeholder)"
        }
    ],
    "paths": {
        "/api/register": {
            "post": {
                "tags": [
                    "Authentication"
                ],
                "summary": "User registration",
                "operationId": "8e4e3cb7b46126f4696379d3c7eeb4ad",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "properties": {
                                    "name": {
                                        "type": "string",
                                        "example": "Siti Rahma"
                                    },
                                    "email": {
                                        "type": "string",
                                        "format": "email",
                                        "example": "siti@example.com"
                                    },
                                    "password": {
                                        "type": "string",
                                        "format": "password",
                                        "minLength": 6,
                                        "example": "rahasia123"
                                    },
                                    "role": {
                                        "description": "Optional role override (defaults to end_user)",
                                        "type": "string",
                                        "enum": [
                                            "end_user",
                                            "mitra",
                                            "admin"
                                        ],
                                        "example": "end_user"
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "User registered successfully",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "success": {
                                            "type": "boolean",
                                            "example": true
                                        },
                                        "message": {
                                            "type": "string",
                                            "example": "User registered successfully"
                                        },
                                        "data": {
                                            "properties": {
                                                "user": {
                                                    "properties": {
                                                        "id": {
                                                            "type": "integer",
                                                            "example": 1
                                                        },
                                                        "name": {
                                                            "type": "string",
                                                            "example": "Siti Rahma"
                                                        },
                                                        "email": {
                                                            "type": "string",
                                                            "example": "siti@example.com"
                                                        },
                                                        "role": {
                                                            "type": "string",
                                                            "example": "end_user"
                                                        }
                                                    },
                                                    "type": "object"
                                                },
                                                "token": {
                                                    "description": "Sanctum plain text token",
                                                    "type": "string",
                                                    "example": "11|AbCdEf123456789...."
                                                }
                                            },
                                            "type": "object"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "422": {
                        "description": "Validation error"
                    }
                }
            }
        },
        "/api/login": {
            "post": {
                "tags": [
                    "Authentication"
                ],
                "summary": "User login",
                "operationId": "222b2625838e3c57e017987f73598fda",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "properties": {
                                    "email": {
                                        "type": "string",
                                        "format": "email",
                                        "example": "user@example.com"
                                    },
                                    "password": {
                                        "type": "string",
                                        "example": "password123"
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Login successful",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "success": {
                                            "type": "boolean",
                                            "example": true
                                        },
                                        "message": {
                                            "type": "string",
                                            "example": "Login successful"
                                        },
                                        "data": {
                                            "type": "object"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "422": {
                        "description": "Validation error"
                    }
                }
            }
        },
        "/api/auth/me": {
            "get": {
                "tags": [
                    "Authentication"
                ],
                "summary": "Get current user profile",
                "operationId": "b5de204f5e452ef51327c691aa99e77c",
                "responses": {
                    "200": {
                        "description": "User profile retrieved successfully",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "success": {
                                            "type": "boolean",
                                            "example": true
                                        },
                                        "message": {
                                            "type": "string",
                                            "example": "User data retrieved successfully"
                                        },
                                        "data": {
                                            "properties": {
                                                "user": {
                                                    "properties": {
                                                        "id": {
                                                            "type": "integer",
                                                            "example": 2
                                                        },
                                                        "name": {
                                                            "type": "string",
                                                            "example": "User Daffa"
                                                        },
                                                        "email": {
                                                            "type": "string",
                                                            "example": "daffa@gmail.com"
                                                        },
                                                        "role": {
                                                            "type": "string",
                                                            "example": "end_user"
                                                        },
                                                        "profile_picture": {
                                                            "type": "string",
                                                            "example": "assets/img_friend1.png"
                                                        },
                                                        "phone": {
                                                            "type": "string",
                                                            "example": "081234567890"
                                                        },
                                                        "address": {
                                                            "type": "string",
                                                            "example": "Jl. Merdeka No. 1, Jakarta"
                                                        },
                                                        "subscription_status": {
                                                            "type": "string",
                                                            "example": "active"
                                                        },
                                                        "points": {
                                                            "type": "integer",
                                                            "example": 50
                                                        },
                                                        "status": {
                                                            "type": "string",
                                                            "example": "active"
                                                        },
                                                        "total_collections": {
                                                            "type": "integer",
                                                            "example": 0
                                                        },
                                                        "created_at": {
                                                            "type": "string",
                                                            "example": "2025-10-06 05:36:59"
                                                        },
                                                        "updated_at": {
                                                            "type": "string",
                                                            "example": "2025-10-06 05:43:41"
                                                        }
                                                    },
                                                    "type": "object"
                                                }
                                            },
                                            "type": "object"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "401": {
                        "description": "Unauthorized"
                    }
                },
                "security": [
                    {
                        "SanctumToken": []
                    }
                ]
            }
        },
        "/api/auth/logout": {
            "post": {
                "tags": [
                    "Authentication"
                ],
                "summary": "Logout current user",
                "operationId": "df9bdc6c7a6d9f20b983526b2ec0f698",
                "responses": {
                    "200": {
                        "description": "User logged out successfully",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "success": {
                                            "type": "boolean",
                                            "example": true
                                        },
                                        "message": {
                                            "type": "string",
                                            "example": "Logged out successfully"
                                        },
                                        "data": {
                                            "type": "null"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "401": {
                        "description": "Unauthorized"
                    }
                },
                "security": [
                    {
                        "SanctumToken": []
                    }
                ]
            }
        }
    },
    "tags": [
        {
            "name": "Authentication",
            "description": "Authentication"
        }
    ]
}